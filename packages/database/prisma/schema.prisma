// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// example table used in the express router example
model HighScore {
  id    Int      @id @default(autoincrement())
  time  DateTime
  score Int
}

//Node Table
model Node {
  nodeId    String @id
  xcoord    Int
  ycoord    Int
  floor     String
  building  String
  nodeType  String
  longName  String @unique
  shortName String
  Edge      Edge[]
  ServiceRequest FlowerServiceRequest[]
}

//Edge Table
model Edge {
  edgeID    String  @id
  node      Node    @relation(fields: [startNodeID], references: [nodeId])
  startNodeID String
  endNodeID   String
}

//User Table
model User {
  Username String    @id
  Password String
  employee Employee?
}

//Employee Table
model Employee {
  user      User   @relation(fields: [Username], references: [Username])
  username  String @id
  firstName String
  lastName  String
  email     String
  flowerServiceRequest FlowerServiceRequest[]
}


//Service Request Table
model FlowerServiceRequest{
  id Int @id @default(autoincrement())
  node Node  @relation(fields: [roomLongName], references: [longName])
  employee Employee @relation(fields: [employeeUser], references: [Username])
  senderName String
  senderEmail String
  roomLongName String @unique
  patientName String
  flowerType String
  deliveryDate String
  note String
  status String @default("Assigned")
  employeeUser String
}

