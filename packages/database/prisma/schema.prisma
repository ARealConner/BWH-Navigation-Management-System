// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// example table used in the express router example
model HighScore {
  id    Int      @id @default(autoincrement())
  time  DateTime
  score Int
}

//Node Table
model Node {
  nodeId    String @id
  xcoord    Int
  ycoord    Int
  floor     String
  building  String
  nodeType  String
  longName  String @unique
  shortName String
  Edge      Edge[]
  ServiceRequest FlowerServiceRequest[]
}

//Edge Table
model Edge {
  edgeID    String  @id
  node      Node    @relation(fields: [startNodeID], references: [nodeId])
  startNodeID String
  endNodeID   String
}

//Employee Table
model Employee{
  username String @id
  password String
  firstName String
  lastName String
  email String
}


//Service Request Table
model FlowerServiceRequest{
  id Int @id @default(autoincrement())
  node Node  @relation(fields: [roomLongName], references: [longName])
  //employee Employee @relation(fields: [employeeID], references: [id])
  senderName String
  senderEmail String
  roomLongName String @unique
  patientName String
  flowerType String
  deliveryDate String
  note String
  status String
  employeeID Int
}

