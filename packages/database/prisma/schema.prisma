// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// example table used in the express router example
model HighScore {
  id    Int      @id @default(autoincrement())
  time  DateTime
  score Int
}

//Node Table
model Node {
  nodeId    String @id @db.VarChar(8)
  xcoord    Int
  ycoord    Int
  floor     String @db.VarChar(2)
  building  String
  nodeType  String @db.VarChar(4)
  longName  String
  shortName String
  Edge      Edge[]
}

//Edge Table
model Edge {
  id        Int     @id @default(autoincrement())
  edgeID    String  @db.VarChar(8)
  node      Node    @relation(fields: [startNode], references: [nodeId])
  startNode String
  endNode   String  @db.VarChar(10)
}

//User Table
model User{
  Username String @id
  Password String
}
